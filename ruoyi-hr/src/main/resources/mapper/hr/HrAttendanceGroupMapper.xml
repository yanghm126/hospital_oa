<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.hr.mapper.HrAttendanceGroupMapper">
    
    <resultMap type="HrAttendanceGroup" id="HrAttendanceGroupResult">
        <result property="groupId"    column="group_id"    />
        <result property="groupName"    column="group_name"    />
        <result property="allowedRadius"    column="allowed_radius"    />
        <result property="latitude"    column="latitude"    />
        <result property="longitude"    column="longitude"    />
        <result property="address"    column="address"    />
        <result property="workDays"    column="work_days"    />
        <result property="deptIds"    column="dept_ids"    />
        <result property="createBy"    column="create_by"    />
        <result property="createTime"    column="create_time"    />
        <result property="updateBy"    column="update_by"    />
        <result property="updateTime"    column="update_time"    />
        <result property="remark"    column="remark"    />
    </resultMap>

    <sql id="selectHrAttendanceGroupVo">
        select group_id, group_name, allowed_radius, latitude, longitude, address, work_days, dept_ids, create_by, create_time, update_by, update_time, remark from hr_attendance_group
    </sql>

    <select id="selectHrAttendanceGroupList" parameterType="HrAttendanceGroup" resultMap="HrAttendanceGroupResult">
        <include refid="selectHrAttendanceGroupVo"/>
        <where>  
            <if test="groupName != null  and groupName != ''"> and group_name like concat('%', #{groupName}, '%')</if>
            <if test="address != null  and address != ''"> and address like concat('%', #{address}, '%')</if>
        </where>
    </select>
    
    <select id="selectHrAttendanceGroupById" parameterType="Long" resultMap="HrAttendanceGroupResult">
        <include refid="selectHrAttendanceGroupVo"/>
        where group_id = #{groupId}
    </select>
        
    <insert id="insertHrAttendanceGroup" parameterType="HrAttendanceGroup" useGeneratedKeys="true" keyProperty="groupId">
        insert into hr_attendance_group
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="groupName != null and groupName != ''">group_name,</if>
            <if test="allowedRadius != null">allowed_radius,</if>
            <if test="latitude != null">latitude,</if>
            <if test="longitude != null">longitude,</if>
            <if test="address != null and address != ''">address,</if>
            <if test="workDays != null">work_days,</if>
            <if test="deptIds != null">dept_ids,</if>
            <if test="createBy != null">create_by,</if>
            <if test="createTime != null">create_time,</if>
            <if test="updateBy != null">update_by,</if>
            <if test="updateTime != null">update_time,</if>
            <if test="remark != null">remark,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="groupName != null and groupName != ''">#{groupName},</if>
            <if test="allowedRadius != null">#{allowedRadius},</if>
            <if test="latitude != null">#{latitude},</if>
            <if test="longitude != null">#{longitude},</if>
            <if test="address != null and address != ''">#{address},</if>
            <if test="workDays != null">#{workDays},</if>
            <if test="deptIds != null">#{deptIds},</if>
            <if test="createBy != null">#{createBy},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="updateBy != null">#{updateBy},</if>
            <if test="updateTime != null">#{updateTime},</if>
            <if test="remark != null">#{remark},</if>
         </trim>
    </insert>

    <update id="updateHrAttendanceGroup" parameterType="HrAttendanceGroup">
        update hr_attendance_group
        <trim prefix="SET" suffixOverrides=",">
            <if test="groupName != null and groupName != ''">group_name = #{groupName},</if>
            <if test="allowedRadius != null">allowed_radius = #{allowedRadius},</if>
            <if test="latitude != null">latitude = #{latitude},</if>
            <if test="longitude != null">longitude = #{longitude},</if>
            <if test="address != null and address != ''">address = #{address},</if>
            <if test="workDays != null">work_days = #{workDays},</if>
            <if test="deptIds != null">dept_ids = #{deptIds},</if>
            <if test="createBy != null">create_by = #{createBy},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="updateBy != null">update_by = #{updateBy},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
            <if test="remark != null">remark = #{remark},</if>
        </trim>
        where group_id = #{groupId}
    </update>

    <delete id="deleteHrAttendanceGroupById" parameterType="Long">
        delete from hr_attendance_group where group_id = #{groupId}
    </delete>

    <delete id="deleteHrAttendanceGroupByIds" parameterType="String">
        delete from hr_attendance_group where group_id in 
        <foreach item="groupId" collection="array" open="(" separator="," close=")">
            #{groupId}
        </foreach>
    </delete>
    
    <select id="selectByDeptId" parameterType="Long" resultMap="HrAttendanceGroupResult">
        SELECT * FROM hr_attendance_group WHERE FIND_IN_SET(#{deptId}, dept_ids) LIMIT 1
    </select>
</mapper>
